<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>

    <div class="container">
        <h2> <%= question %></h2>
        <canvas id="myChart" width="400" height="400"></canvas>
        <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: optionStat,
                datasets: [{
                    label: '# of Votes',
                    data: voteCount,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        </script>
        

        <ol>
            <% for(const key in option) { %>

                <li><%= option[key].optionStatement %>  has got <%= option[key].count %> votes.</li>
                
            <% } %>     
        </ol>
        <button onClick="window.location.reload();">Refresh Page</button>
        <form method="POST">
        <button type="submit"> Delete this poll </button>
        
    </form>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>